<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    android:outlineAmbientShadowColor="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/companyTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/comapnyEt"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/comapnyEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:layout_margin="5dp"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/companyTxt"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#868080"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/companyTxt"/>

        <TextView
            android:id="@+id/modelTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Car Model"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/modelEt"
            app:layout_constraintTop_toBottomOf="@id/companyTxt"/>

        <TextView
            android:id="@+id/modelEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Car Model"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/comapnyEt"
            app:layout_constraintStart_toEndOf="@id/modelTxt"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#868080"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/modelTxt"/>

        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Showroom Price"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/priceEt"
            app:layout_constraintTop_toBottomOf="@id/modelTxt"/>

        <TextView
            android:id="@+id/priceEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="price"
            android:layout_margin="5dp"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/modelEt"
            app:layout_constraintStart_toEndOf="@id/priceTxt"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>